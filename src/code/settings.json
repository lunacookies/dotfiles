{
  //
  // Colours and font
  //

  "editor.fontFamily": "Input Sans",
  "terminal.integrated.fontFamily": "Input Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 11,
  "terminal.integrated.fontSize": 11,
  "workbench.colorTheme": "One Dark Pro",
  "workbench.colorCustomizations": {
    "rust_analyzer.inlayHints.foreground": "#636B78"
  },
  "editor.semanticTokenColorCustomizations": {
    "rules": {
      "variable": "#ABB2BF",
      "parameter": { "foreground": "#ABB2BF", "fontStyle": "" },
      "namespace": "#ABB2BF",
      "lifetime": "#56B6C2"
    }
  },

  //
  // Hide annoyances
  //

  "breadcrumbs.enabled": false,
  "editor.codeLens": false,
  "editor.folding": false,
  "editor.glyphMargin": false,
  "editor.lightbulb.enabled": false,
  "editor.lineNumbers": "off",
  "editor.matchBrackets": "near",
  "editor.minimap.enabled": false,
  "editor.parameterHints.enabled": false,
  "editor.renderIndentGuides": false,
  "editor.renderWhitespace": "none",
  "editor.roundedSelection": false,
  "editor.wordBasedSuggestions": false,
  "scm.diffDecorationsGutterWidth": 2,
  "workbench.activityBar.visible": false,
  "workbench.editor.showTabs": false,
  "workbench.list.automaticKeyboardNavigation": false,

  //
  // Small pleasant UI tweaks
  //

  "editor.cursorBlinking": "phase",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "workbench.panel.defaultLocation": "right",
  "workbench.sideBar.location": "right",
  "workbench.tree.indent": 16,

  //
  // Clean up automatically
  //

  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  //
  // Plugins and languages
  //

  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,

  "customizeUI.stylesheet": {
    // disable macOS artificial thickening of text
    // that precludes hinting from being used
    "html": "-webkit-font-smoothing: antialiased !important",
    ".view-lines": "font-feature-settings: \"ss02\", \"ss11\", \"ss12\", \"ss13\" !important",
    ".mtki": "font-feature-settings: \"ss01\", \"ss02\", \"ss11\", \"ss12\", \"ss13\""
  },

  "git.enableCommitSigning": true,
  "rewrap.wrappingColumn": 100,
  "rust-analyzer.assist.importGranularity": "module",
  "rust-analyzer.assist.importGroup": false,
  "rust-analyzer.checkOnSave.command": "clippy",
  // prevents pixel misalignment on text following inlay hints
  "rust-analyzer.inlayHints.smallerHints": false,

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // format HTML by manually running Prettier on save
  //
  // the Prettier extension doesnâ€™t seem to detect the Go template plugin,
  // while the CLI does
  "[html]": {
    "editor.formatOnSave": false
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.html$",
        "cmd": "prettier --write \"${file}\""
      }
    ]
  },

  // disable language detection for git commit messages,
  // since the presence of code in other languages
  // confuses the detection system
  "[git-commit]": {
    "workbench.editor.languageDetection": false
  }
}
