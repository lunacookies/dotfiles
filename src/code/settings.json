{
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontSize": 13,
  "terminal.integrated.fontSize": 12,
  "editor.fontLigatures": true,

  "editor.codeLens": false,
  "editor.folding": false,
  "editor.glyphMargin": false,
  "editor.lightbulb.enabled": false,
  "editor.lineNumbers": "off",
  "editor.matchBrackets": "near",
  "editor.minimap.enabled": false,
  "editor.parameterHints.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.roundedSelection": false,
  "editor.wordBasedSuggestions": false,
  "scm.diffDecorationsGutterWidth": 2,
  "security.workspace.trust.enabled": false,
  "workbench.activityBar.visible": false,
  "workbench.editor.showTabs": false,
  "workbench.list.automaticKeyboardNavigation": false,

  "editor.cursorBlinking": "phase",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "window.titleBarStyle": "native",
  "workbench.panel.defaultLocation": "right",
  "workbench.sideBar.location": "right",
  "workbench.tree.indent": 16,

  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "editor.unicodeHighlight.allowedCharacters": {
    "‘": true,
    "’": true,
    "“": true,
    "”": true
  },
  "editor.unicodeHighlight.nonBasicASCII": true,
  "editor.unicodeHighlight.invisibleCharacters": true,
  "editor.unicodeHighlight.includeComments": true,

  "git.enableCommitSigning": true,
  "rust-analyzer.assist.importGranularity": "module",
  "rust-analyzer.assist.importGroup": false,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.workspace.symbol.search.kind": "all_symbols",

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // format HTML by manually running Prettier on save
  //
  // the Prettier extension doesn’t seem to detect the Go template plugin,
  // while the CLI does
  "[html]": {
    "editor.formatOnSave": false
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.html$",
        "cmd": "prettier --parser go-template --write \"${file}\""
      }
    ]
  },

  // disable language detection for git commit messages,
  // since the presence of code in other languages
  // confuses the detection system
  "[git-commit]": {
    "workbench.editor.languageDetection": false
  }
}
