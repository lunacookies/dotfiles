{
  //
  // Colours and font
  //

  "editor.fontFamily": "Input Sans",
  "terminal.integrated.fontFamily": "Input Mono",
  "editor.fontSize": 14,
  "editor.lineHeight": 21,
  "workbench.colorTheme": "Gamut",

  //
  // Hide annoyances
  //

  "breadcrumbs.enabled": false,
  "editor.folding": false,
  "editor.glyphMargin": false,
  "editor.lightbulb.enabled": false,
  "editor.lineNumbers": "off",
  "editor.matchBrackets": "near",
  "editor.minimap.enabled": false,
  "editor.parameterHints.enabled": false,
  "editor.renderIndentGuides": false,
  "editor.renderWhitespace": "none",
  "editor.roundedSelection": false,
  "editor.wordBasedSuggestions": false,
  "scm.diffDecorationsGutterWidth": 2,
  "workbench.activityBar.visible": false,
  "workbench.editor.showTabs": false,
  "workbench.iconTheme": null,
  "workbench.list.automaticKeyboardNavigation": false,

  //
  // Small pleasant UI tweaks
  //

  "editor.cursorBlinking": "solid",
  "editor.cursorWidth": 1,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggestLineHeight": 26,
  "workbench.panel.defaultLocation": "right",
  "workbench.sideBar.location": "right",
  "workbench.tree.indent": 16,

  //
  // Clean up automatically
  //

  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  //
  // Plugins and languages
  //

  "customizeUI.stylesheet": {
    ".mac": "font-family: Input Sans !important; --monaco-monospace-font: Input Sans",
    ".mac, .view-line": "font-feature-settings: \"ss11\", \"ss12\" !important",
    ".mtki": "font-feature-settings: \"ss01\", \"ss02\", \"ss11\", \"ss12\"",
    ".slider": "border-radius: 14px;"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "git.enableCommitSigning": true,
  "rewrap.wrappingColumn": 100,
  "rust-analyzer.assist.importGranularity": "module",
  "rust-analyzer.assist.importGroup": false,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.inlayHints.chainingHints": false,
  "rust-analyzer.lens.references": true,

  // Use Prettier for these languages.
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Format HTML by manually running Prettier on save. This is because the Prettier extension
  // doesnâ€™t seem to detect the Go template plugin, while the CLI does.
  "[html]": {
    "editor.formatOnSave": false
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.html$",
        "cmd": "prettier --write \"${file}\""
      }
    ]
  }
}
